
@model IEnumerable<EmployeeLeaveMangApp.Models.EmployeeClass>

@{
    ViewData["Title"] = "GetAllEmployee";
}

    
<div >
    <h2 class="text-primary" >All Employee List</h2>
</div>

<div class="container p-3" style="background-color:azure">
    <

    <div>
        <a class="nav-link text-dark btn-primary font-weight-bold" style="margin: 10px; background-color: #00b9ff;float: right" asp-controller="Admin" asp- asp-action="GetAllEmployee">Get All Employee</a>
    </div>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        EmpId
                    </th>
                    <th>
                        EmpName
                    </th>
                    <th>
                        EmpGender
                    </th>
                    <th>
                        LeaveStatus
                    </th>
                    <th>
                        LeaveId
                    </th>
                    <th>
                        LeaveType
                    </th>
                    <th>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var detail in Model)
                {
                    <tr>
                        <td>@detail.EmpId</td>
                        <td>@detail.EmpName</td>
                        <td>@detail.EmpGender</td>
                        <td>@detail.LeaveStatus</td>
                        <td>@detail.LeaveId</td>
                        <td>@detail.LeaveType</td>

                        
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

