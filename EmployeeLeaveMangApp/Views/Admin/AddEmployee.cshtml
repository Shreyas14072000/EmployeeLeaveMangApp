@model EmployeeLeaveMangApp.Models.EmployeeClass

@{
    ViewData["Title"] = "Add Employee Details";
}

<form method="post" asp-controller="Admin" asp-action="AddEmployee"  style="background-color:azure">
    <div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="EmpId"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="EmpId" class="form-control" />
                        <span asp-validation-for="EmpId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="EmpName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="EmpName" class="form-control" />
                        <span asp-validation-for="EmpName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="EmpGender"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="EmpGender" class="form-control" />
                        <span asp-validation-for="EmpGender" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="LeaveStatus"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="LeaveStatus" class="form-control" readonly />
                        <span asp-validation-for="LeaveStatus" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="LeaveId"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="LeaveId" class="form-control" readonly />
                        <span asp-validation-for="LeaveId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="LeaveType"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="LeaveType" class="form-control" readonly />
                        <span asp-validation-for="LeaveType" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    @*<div class="col-6 offset-4 row">*@
                    <div class="col-4 offset-4">
                        <input type="submit" class="btn btn-info w-100" value="AddEmployee" />
                    </div>
                </div>
                @if (ViewBag.Message != null)
                {
                    <a class="nav-link text-dark btn-primary font-weight-bold" style="position: relative; margin: 10px; background-color: #ff8d00;float: right" asp-controller="Admin" asp-action="GetAllEmployee">Get All Employee</a>
                    <script type="text/javascript">
                                                window.onload = function () {
                                                alert("@ViewBag.Message");
                                                };
                    </script>
                }
            </div>
        </div>
    </div>
</form>

