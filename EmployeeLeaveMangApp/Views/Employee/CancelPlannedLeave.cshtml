@model EmployeeLeaveMangApp.Models.ApplyPlannedLeave

@{
    ViewData["Title"] = "Apply For Planned Leave";
}
<form method="post" asp-controller="Employee" asp-action="CancelPlannedLeave" style="background-color:azure">
    <div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="EmpId"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="EmpId" class="form-control" />
                        <span asp-validation-for="EmpId" class="text-danger"></span>
                    </div>
                </div>




                <div class="form-group row">
                    @*<div class="col-6 offset-4 row">*@
                    <div class="col-4 offset-4">
                        <input type="submit" class="btn btn-info w-100" value="Delete" />
                    </div>
                </div>
                @if (ViewBag.Message != null)
                {
                    <a class="nav-link text-dark btn-primary font-weight-bold" style="position: relative; margin: 10px; background-color: #ff8d00;float: right" asp-controller="Employee" asp-action="GetApplication">Get Application</a>
                    <script type="text/javascript">
                                                window.onload = function () {
                                                alert("@ViewBag.Message");
                                                };
                    </script>
                }

            </div>
        </div>
    </div>
</form>

