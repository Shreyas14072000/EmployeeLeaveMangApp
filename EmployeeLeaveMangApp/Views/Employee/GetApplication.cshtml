
@model IEnumerable<EmployeeLeaveMangApp.Models.ApplyPlannedLeave>

@{
    ViewData["Title"] = "GetApplication";
}


<div>
    <h2 class="text-primary"> Application List</h2>
</div>

<div class="container p-3" style="background-color:azure">
    <

    <div>
        <a class="nav-link text-dark btn-primary font-weight-bold" style="margin: 10px; background-color: #00b9ff;float: right" asp-controller="Employee" asp- asp-action="GetApplication">Get Application</a>
    </div>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        EmpId
                    </th>
                    <th>
                        EmpName
                    </th>
                    
                    
                    <th>
                        LeaveDuration
                    </th>
                    <th>
                        LeaveReason
                    </th>
                    <th>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var detail in Model)
                {
                    <tr>
                        <td>@detail.EmpId</td>
                        <td>@detail.EmpName</td>
                        <td>@detail.LeaveDuration</td>
                        <td>@detail.LeaveReason<td>


                    </tr>
                }
            </tbody>
        </table>
    }
</div>
